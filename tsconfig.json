{
  "compilerOptions": {
    "target": "ES2020",                                
    "module": "commonjs",                              
    "esModuleInterop": true,                                      
    "forceConsistentCasingInFileNames": true,          
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@api/*": ["app/api/*"],
      "@models/*": ["core/domain/models/*"],
      "@typing/*": ["core/domain/types/*"],
      "@errors/*": ["core/errors/*"],
      "@interfaces/*": ["core/interfaces/*"],
      "@services/*": ["core/services/*"],
      "@utils/*": ["core/utils/*"],
      "@infra/*": ["infra/*"],
    },
  }
}
